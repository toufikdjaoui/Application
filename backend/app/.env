# Mode DZ Environment Configuration

# Application
APP_NAME=Mode DZ
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-change-in-production

# API
API_V1_STR=/api/v1

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Database (Sans Docker)
MONGODB_URL=mongodb://localhost:27017/mode_dz
DATABASE_NAME=mode_dz

# Redis (Local ou Cloud)
REDIS_URL=redis://localhost:6379
# Ou Redis Cloud : redis://default:password@redis-xxxxx.redislabs.com:12345

# File uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Payment (Development)
CIB_API_KEY=test_cib_key
EDAHABIA_API_KEY=test_edahabia_key

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
